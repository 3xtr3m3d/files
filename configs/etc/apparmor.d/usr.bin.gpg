#include <tunables/global>

/usr/bin/gpg {

  #include <abstractions/base>
  #include <abstractions/user-tmp>
  #include <abstractions/nameservice>


  /usr/bin/gpg mrix,
  /usr/bin/gpgconf rPx,
  /usr/bin/gpg-connect-agent rPx,
  /usr/bin/gpg-agent rPx,
  /usr/bin/dirmngr mrix,
  /usr/bin/gpgsm rix,
  /usr/lib/gnupg/scdaemon rPx,

  # GPG config files
  owner @{HOME}/.gnupg/ rw,
  owner @{HOME}/.gnupg/** rwkl,
  owner /{,var/}run/user/[0-9]*/gnupg/ rw,
  owner /{,var/}run/user/[0-9]*/gnupg/* rw,

  # Needed for apt-key
  /etc/apt/trusted.gpg* rwkl,
  /etc/apt/trusted.gpg.d/ r,
  /etc/apt/trusted.gpg.d/** rw,
  /tmp/apt-key-gpghome*/** rwkl,
  /etc/apt/.* rwkl,

  # CA cert for SKS keyservers pool
  /usr/share/gnupg/** r,

  # Needed for popularity-contest
  /usr/share/popularity-contest/* r,
  /var/log/popularity-contest* rwkl,

  owner @{PROC}/@{pid}/task/[0-9]*/stat rw,
  owner @{PROC}/@{pid}/task/[0-9]*/comm rw,
  @{PROC}/@{pid}/fd/ r,
  /etc/inputrc r,

  /dev/tty rw,

}
