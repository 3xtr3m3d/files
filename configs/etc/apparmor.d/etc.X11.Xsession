#include <tunables/global>

/etc/X11/Xsession {
  #include <abstractions/base>
  #include <abstractions/user-tmp>


  /usr/bin/dbus-update-activation-environment rix,

  /bin/dash rix,
  /bin/rm rix,
  /bin/touch rix,
  /bin/grep rix,
  /bin/sed rix,
  /bin/which rix,
  /bin/run-parts rix,
  /bin/cat rix,
  /bin/tempfile rix,
  /bin/date rix,
  /bin/chmod rix,
  /usr/bin/head rix,
  /usr/bin/gawk rix,
  /usr/bin/id rix,
  /usr/bin/xhost rix,
  /usr/bin/numlockx rix,

  /usr/bin/gpgconf rPUx,
  /usr/bin/gpg-agent rPUx,
  /usr/bin/openbox-session rPUx,
  /usr/bin/xrdb rPUx,

  /etc/X11/ r,
  /etc/X11/** r,

  /etc/default/ r,
  /etc/default/** r,
  /etc/passwd r,
  /etc/nsswitch.conf r,

  owner @{HOME}/.xsession-errors* rw,
  owner @{HOME}/.Xauthority r,

  /bin/udevadm Cx -> udevadm,
  profile udevadm {
    #include <abstractions/base>

    /bin/udevadm mr,

    /etc/udev/udev.conf r,
    /{,var/}run/udev/data/** r,

    /sys/bus/ r,
    /sys/bus/**/ r,

    /sys/devices/** r,

    /sys/class/ r,
    /sys/class/**/ r,

    @{PROC}/@{pid}/stat r,
    @{PROC}/cmdline r,
    @{PROC}/1/sched r,

    owner @{HOME}/.xsession-errors* rw,

  }

  /usr/bin/glxinfo Cx -> glxinfo,
  profile glxinfo {
    #include <abstractions/base>
    #include <abstractions/X>

    /usr/bin/glxinfo mr,

  }

}
