  /etc/passwd r,
  /etc/nsswitch.conf r,

  @{PROC}/@{pid}/cmdline r,
  @{PROC}/@{pid}/cgroup r,
  @{PROC}/@{pid}/fd/ r,

  /var/lib/dbus/machine-id r,

  # KDE5 abstraction
