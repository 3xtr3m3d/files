#include <tunables/global>

/usr/bin/xinit {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>

  signal (receive) set=(usr1) peer=/usr/lib/xorg/Xorg,
  signal (send) set=(term) peer=/usr/lib/xorg/Xorg,

  signal (send) set=(hup) peer=/usr/bin/conky,
  signal (send) set=(hup) peer=/usr/bin/tint2,
  signal (send) set=(hup) peer=/usr/bin/volumeicon,
  signal (send) set=(hup) peer=/usr/bin/gnome-keyring-daemon,

  signal (send) set=(hup) peer=unconfined,

  /etc/X11/xinit/xinitrc rix,
  /etc/X11/xinit/xserverrc rix,
  /usr/bin/dbus-update-activation-environment rix,

  /bin/rm rix,
  /bin/touch rix,
  /bin/grep rix,
  /bin/sed rix,
  /bin/which rix,
  /bin/run-parts rix,
  /bin/cat rix,
  /bin/tempfile rix,
  /bin/date rix,
  /bin/chmod rix,
  /usr/bin/head rix,
  /usr/bin/gawk rix,
  /usr/bin/id rix,
  /usr/bin/xhost rix,
  /usr/bin/numlockx rix,

  /usr/bin/gpgconf rPUx,
  /usr/bin/gpg-agent rPUx,
  /usr/bin/openbox-session rPUx,
  /usr/bin/xrdb rPUx,

  /usr/bin/Xorg rPx,

  /etc/X11/ r,
  /etc/X11/** r,

  /etc/default/ r,
  /etc/default/** r,
  /etc/passwd r,
  /etc/nsswitch.conf r,

  owner @{HOME}/.xsession-errors* rw,
  owner @{HOME}/.Xauthority r,

  /bin/udevadm Cx -> udevadm,
  profile udevadm {
    #include <abstractions/base>

    /bin/udevadm mr,

    /etc/udev/udev.conf r,
    /{,var/}run/udev/data/** r,

    /sys/bus/ r,
    /sys/bus/**/ r,

    /sys/devices/** r,

    /sys/class/ r,
    /sys/class/**/ r,

    @{PROC}/@{pid}/stat r,
    @{PROC}/1/sched r,
    @{PROC}/cmdline r,

    # file_inherit
    deny /dev/tty[0-9]* rw,
    owner @{HOME}/.xsession-errors rw,

  }

  /usr/bin/glxinfo Cx -> glxinfo,
  profile glxinfo {
    #include <abstractions/base>
    #include <abstractions/X>

    /usr/bin/glxinfo mr,

  }

}
