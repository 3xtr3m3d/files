#include <tunables/global>

@{MOZ_LIBDIR}=/opt/thunderbird
@{MOZ_PROFILE}=/media/Kabi/.thunderbird
#@{MOZ_PROFILE}=@{HOME}/.thunderbird

/opt/thunderbird/thunderbird {

	#include <abstractions/base>
	#include <abstractions/private-files>
	#include <abstractions/gnome>
	#include <abstractions/fonts>
	#include <abstractions/audio>
	#include <abstractions/nameservice>
	#include <abstractions/user-download>
	#include <abstractions/dbus-session-strict>
	#include <abstractions/gstreamer>

	# potentially extremely sensitive files
	audit deny @{HOME}/.ssh/** mrwkl,
	audit deny @{HOME}/.gnome2_private/** mrwkl,
	audit deny @{HOME}/.gnome2/keyrings/** mrwkl,
	audit deny @{HOME}/.mozilla/** mrwkl,
	audit deny @{HOME}/.config/chromium/** mrwkl,
	audit deny @{HOME}/.evolution/** mrwkl,
	audit deny @{HOME}/.config/evolution/** mrwkl,
	audit deny @{HOME}/.kde{,4}/share/apps/kmail{,2}/** mrwkl,
	audit deny @{HOME}/.kde{,4}/share/apps/kwallet/** mrwkl,

	# don't allow access to any gnome-keyring modules
	audit deny /{,var/}run/user/[0-9]*/keyring** mrwkl,

	# Thunderbird files
	@{MOZ_LIBDIR}/ r,
	@{MOZ_LIBDIR}/**  mixr,
	@{MOZ_LIBDIR}/update.test/ rw,
	@{MOZ_LIBDIR}/update.test/** rw,
	@{MOZ_LIBDIR}/update.test rw,

	# Profile files
	@{MOZ_PROFILE}/** rwk,
	@{MOZ_PROFILE}/**/extensions/** mrwk,
	@{MOZ_PROFILE}/profiles.ini r,

	# Cache
	owner /tmp/morfik_cache/.cache/thunderbird/ rwk,
	owner /tmp/morfik_cache/.cache/thunderbird/** rwk,
	owner @{HOME}/.cache/thunderbird/ rwk,
	owner @{HOME}/.cache/thunderbird/** rwk,

	# Enigmail
	owner @{HOME}/.gnupg/ r,
	owner @{HOME}/.gnupg/** rw,
	owner @{HOME}/.gnupg/random_seed k,
	owner @{HOME}/.gnupg/.* l,
	owner @{HOME}/.gnupg/*.lock l,
	owner @{PROC}/@{pid}/task/[0-9]*/comm rw,
	/usr/bin/gpg-connect-agent rix,
	/usr/bin/gpg2 rix,
	/usr/bin/gpgconf rix,
	/usr/bin/dirmngr rix,
	/bin/ps rix,
	/usr/lib/gnupg2/gpg2keys_hkp rix,

	# Devices
	/sys/devices/system/cpu/ r,
	/sys/devices/system/cpu/** r,

	# webcam
	deny /dev/video0 rw,
	deny /dev/v4l/by-path/ r,

	# mic
	deny /dev/snd/pcmC0D0c rw,

	/etc/mime.types r,
	/usr/share/applications/kde4/ r,
	/usr/share/applications/kde4/** r,
	owner @{HOME}/.config/gtk-3.0/bookmarks r ,

	# Proc files
	#owner @{PROC}/@{pid}/cmdline r,
	owner @{PROC}/@{pid}/fd/ r,
	owner @{PROC}/@{pid}/fd/* r,
	#owner @{PROC}/@{pid}/maps r,
	owner @{PROC}/@{pid}/smaps r,
	owner @{PROC}/@{pid}/mountinfo r,
	owner @{PROC}/@{pid}/stat r,
	owner @{PROC}/@{pid}/statm r,
	owner @{PROC}/@{pid}/status r,
	owner @{PROC}/@{pid}/task/[0-9]*/stat r,
	audit deny owner @{PROC}/uptime r,
	owner @{PROC}/@{pid}/auxv r,

	# To avoid some crashes after waking up from hibernation
	owner @{PROC}/[0-9]*/task/ r,
	owner @{PROC}/[0-9]*/task/[0-9]*/stat r,

	# Locales
	/usr/bin/locale rix,

	/etc/mailcap r,

	# PulseAudio module-ladspa-sink (plugin sc4m_1916)
	/usr/lib/ladspa/ r,
	/usr/lib/ladspa/*.so mr,

	# Launch external apps
	/opt/firefox/firefox rPUx,

}
